<Application x:Class="RagoOptimiser.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="BgOuterLeft">#141414</Color>
            <Color x:Key="BgOuterRight">#1E1E1E</Color>
            <Color x:Key="CardBorderColor">#333842</Color>
            <Color x:Key="AccentRed">#FF1A1A</Color>
            <Color x:Key="CardDark">#0C0F15</Color>
            <Color x:Key="CardDarkSoft">#11161F</Color>

            <LinearGradientBrush x:Key="AppBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="{StaticResource BgOuterLeft}" Offset="0"/>
                <GradientStop Color="#101318" Offset="0.5"/>
                <GradientStop Color="{StaticResource BgOuterRight}" Offset="1"/>
            </LinearGradientBrush>

            <LinearGradientBrush x:Key="GlassCardBrush" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#D90E121A" Offset="0"/>
                <GradientStop Color="#CC090C12" Offset="0.5"/>
                <GradientStop Color="#D90E121A" Offset="1"/>
            </LinearGradientBrush>

            <DropShadowEffect x:Key="RedGlow" BlurRadius="18" ShadowDepth="0" Color="#66FF0000" Opacity="0"/>

            <Style x:Key="BaseTextBlock" TargetType="TextBlock">
                <Setter Property="Foreground" Value="#ECECEC"/>
                <Setter Property="FontFamily" Value="Segoe UI"/>
            </Style>

            <Style x:Key="CardBorderStyle" TargetType="Border">
                <Setter Property="CornerRadius" Value="22"/>
                <Setter Property="BorderBrush" Value="#303844"/>
                <Setter Property="BorderThickness" Value="1.2"/>
                <Setter Property="Background" Value="{StaticResource GlassCardBrush}"/>
            </Style>

            <Style x:Key="DarkInputTextBox" TargetType="TextBox">
                <Setter Property="Background" Value="#090C12"/>
                <Setter Property="Foreground" Value="#F6F6F6"/>
                <Setter Property="BorderBrush" Value="#090C12"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="FontSize" Value="15"/>
                <Setter Property="Height" Value="42"/>
                <Setter Property="Padding" Value="14,8"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TextBox">
                            <Border Background="{TemplateBinding Background}" CornerRadius="13" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                <ScrollViewer x:Name="PART_ContentHost" Margin="0" />
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="PrimaryButtonStyle" TargetType="Button">
                <Setter Property="Foreground" Value="#111111"/>
                <Setter Property="Background" Value="#D8D8DA"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="FontSize" Value="30"/>
                <Setter Property="Height" Value="72"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                <Setter Property="RenderTransform">
                    <Setter.Value>
                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                    </Setter.Value>
                </Setter>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="Root" CornerRadius="15" Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="Root" Property="Opacity" Value="0.92"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <EventTrigger RoutedEvent="PreviewMouseLeftButtonDown">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)" To="0.98" Duration="0:0:0.08"/>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)" To="0.98" Duration="0:0:0.08"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="PreviewMouseLeftButtonUp">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)" To="1" Duration="0:0:0.12"/>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)" To="1" Duration="0:0:0.12"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="DarkCardButtonStyle" TargetType="Button">
                <Setter Property="Foreground" Value="#ECECEC"/>
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Padding" Value="18,12"/>
                <Setter Property="BorderBrush" Value="#10141C"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Background" Value="#0A0E14"/>
                <Setter Property="Effect" Value="{StaticResource RedGlow}"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                <Setter Property="RenderTransform">
                    <Setter.Value>
                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                    </Setter.Value>
                </Setter>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="Card" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="14">
                                <ContentPresenter/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Card" Property="BorderBrush" Value="#FF2E2E"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Effect">
                            <Setter.Value>
                                <DropShadowEffect BlurRadius="16" ShadowDepth="0" Color="#55FF0000" Opacity="1"/>
                            </Setter.Value>
                        </Setter>
                    </Trigger>
                    <EventTrigger RoutedEvent="PreviewMouseLeftButtonDown">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)" To="0.988" Duration="0:0:0.08"/>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)" To="0.988" Duration="0:0:0.08"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="PreviewMouseLeftButtonUp">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)" To="1" Duration="0:0:0.12"/>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)" To="1" Duration="0:0:0.12"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
