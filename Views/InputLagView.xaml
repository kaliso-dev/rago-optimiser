<UserControl x:Class="RagoOptimiser.Views.InputLagView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="520" Height="860"
             Opacity="0">
    <UserControl.Resources>
        <Style x:Key="LagButton" TargetType="Button" BasedOn="{StaticResource DarkCardButtonStyle}">
            <Setter Property="Height" Value="74"/>
            <Setter Property="FontSize" Value="17"/>
        </Style>
        <Style x:Key="SelectorChip" TargetType="Border">
            <Setter Property="Background" Value="#090E14"/>
            <Setter Property="BorderBrush" Value="#30343B"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="Width" Value="126"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="0,6,0,0"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="{StaticResource AppBackgroundBrush}">
        <TextBlock Text="InputLag Menu" Style="{StaticResource BaseTextBlock}" FontSize="47" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,26,0,0" VerticalAlignment="Top"/>

        <Border Width="420" Height="760" Style="{StaticResource CardBorderStyle}" Margin="0,98,0,0" VerticalAlignment="Top">
            <Grid Margin="30,24,30,24">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions><ColumnDefinition Width="Auto"/><ColumnDefinition Width="16"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                    <Grid Width="88" Height="88">
                        <Path Fill="#FF1D1D" Data="M8,15 L8,82 L24,68 L24,49 L53,49 L23,80 L48,80 L83,45 L83,15 Z" Stretch="Fill"/>
                    </Grid>
                    <Border Grid.Column="2" Height="66" VerticalAlignment="Center" BorderBrush="#313844" BorderThickness="1.2" CornerRadius="14" Background="#0A0E14">
                        <Grid Margin="14,0">
                            <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="50"/></Grid.ColumnDefinitions>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Abel RG" Style="{StaticResource BaseTextBlock}" FontWeight="Bold" FontSize="20"/>
                                <TextBlock Text="Premium" Foreground="#FF1A1A" FontSize="20" FontWeight="SemiBold"/>
                            </StackPanel>
                            <Grid Grid.Column="1" Width="44" Height="44" VerticalAlignment="Center">
                                <Ellipse Stroke="#DFDFDF" StrokeThickness="4"/>
                                <Ellipse Width="14" Height="14" Fill="#DFDFDF" VerticalAlignment="Top" Margin="0,8,0,0"/>
                                <Path Fill="#DFDFDF" Data="M22,24 C14,24 10,31 10,37 L34,37 C34,31 30,24 22,24 Z"/>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>

                <Button Grid.Row="2" Style="{StaticResource LagButton}">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="Driver Latency" Style="{StaticResource BaseTextBlock}" FontSize="37" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="Unleash your PC's Speed" Foreground="#CFCFCF" FontSize="31" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Grid.Row="4" x:Name="WindowsLatencyButton" Style="{StaticResource LagButton}" BorderBrush="#FF0000" BorderThickness="1.5">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="Windows Latency" Style="{StaticResource BaseTextBlock}" FontSize="37" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="Unleash your PC's Speed" Foreground="#CFCFCF" FontSize="31" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Grid.Row="6" Style="{StaticResource LagButton}" BorderBrush="#FF0000" BorderThickness="1.5">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="Adapter Latency" Style="{StaticResource BaseTextBlock}" FontSize="37" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="Unleash your PC's Speed" Foreground="#CFCFCF" FontSize="31" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Grid.Row="8" Style="{StaticResource LagButton}">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="Advanced Latency" Style="{StaticResource BaseTextBlock}" FontSize="37" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="Unleash your PC's Speed" Foreground="#CFCFCF" FontSize="31" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Border Grid.Row="10" Background="#090D13" CornerRadius="14" Padding="16,10,16,14">
                    <Grid>
                        <Grid.RowDefinitions><RowDefinition Height="Auto"/><RowDefinition Height="Auto"/><RowDefinition Height="Auto"/><RowDefinition Height="Auto"/></Grid.RowDefinitions>
                        <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="20"/></Grid.ColumnDefinitions>
                        <TextBlock Text="Latency Selector" Style="{StaticResource BaseTextBlock}" FontSize="39" FontWeight="Bold"/>
                        <TextBlock Grid.Column="1" Text="◉" Foreground="#D5D5D5" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Right"/>

                        <Border Grid.Row="1" Style="{StaticResource SelectorChip}" HorizontalAlignment="Center"><TextBlock Text="Lowest" Foreground="#E9E9E9" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Center"/></Border>
                        <Border Grid.Row="2" Style="{StaticResource SelectorChip}" HorizontalAlignment="Center" BorderBrush="#FF0000"><TextBlock Text="Low" Foreground="#E9E9E9" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Center"/></Border>
                        <Border Grid.Row="3" Style="{StaticResource SelectorChip}" HorizontalAlignment="Center"><TextBlock Text="Normal" Foreground="#E9E9E9" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Center"/></Border>
                    </Grid>
                </Border>

                <Grid Grid.Row="12">
                    <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="58"/></Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Style="{StaticResource PrimaryButtonStyle}" Height="64" FontSize="36" Content="Apply"/>
                    <TextBlock Grid.Column="1" Text="⟳" Foreground="#E9E9E9" FontSize="44" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                </Grid>

                <Button Grid.Row="14" Height="54" Background="#0A0E14" Foreground="#F2F2F2" BorderThickness="0" FontSize="35" FontWeight="SemiBold" Cursor="Hand" Style="{StaticResource DarkCardButtonStyle}" Content="Reset"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
