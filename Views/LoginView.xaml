<UserControl x:Class="RagoOptimiser.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="540" Height="760"
             Opacity="0">
    <UserControl.Resources>
        <Style x:Key="DarkPasswordBox" TargetType="PasswordBox">
            <Setter Property="Background" Value="#090C12"/>
            <Setter Property="Foreground" Value="#F6F6F6"/>
            <Setter Property="BorderBrush" Value="#090C12"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}" CornerRadius="13" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="{StaticResource AppBackgroundBrush}">
        <Border Width="380" Height="560" Style="{StaticResource CardBorderStyle}" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid Margin="42,24,42,26">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="56"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="56"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="18"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Width="94" Height="94" HorizontalAlignment="Center">
                    <Path Fill="#FF1D1D" Data="M8,15 L8,82 L24,68 L24,49 L53,49 L23,80 L48,80 L83,45 L83,15 Z" Stretch="Fill"/>
                </Grid>

                <StackPanel Grid.Row="2">
                    <TextBlock Style="{StaticResource BaseTextBlock}" Text="Email" FontSize="14" Margin="4,0,0,10"/>
                    <TextBox Style="{StaticResource DarkInputTextBox}"/>
                </StackPanel>

                <StackPanel Grid.Row="4">
                    <TextBlock Style="{StaticResource BaseTextBlock}" Text="Password" FontSize="14" Margin="4,0,0,10"/>
                    <PasswordBox Style="{StaticResource DarkPasswordBox}"/>
                </StackPanel>

                <Button Grid.Row="6" Style="{StaticResource PrimaryButtonStyle}" Content="Login" Margin="42,0,42,0" Height="68" FontSize="31"/>

                <TextBlock Grid.Row="8" Style="{StaticResource BaseTextBlock}" Text="Forgot Your Password ?" Foreground="#8C8F96" HorizontalAlignment="Center" FontSize="18"/>

                <TextBlock Grid.Row="10" HorizontalAlignment="Center" FontSize="16" Style="{StaticResource BaseTextBlock}" Margin="0,0,0,8">
                    <Run Text="Don't have an account ? " Foreground="#ECECEC"/>
                    <Run Text="Sign Up" Foreground="#FF1D1D"/>
                </TextBlock>
            </Grid>
        </Border>
    </Grid>
</UserControl>
