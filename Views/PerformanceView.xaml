<UserControl x:Class="RagoOptimiser.Views.PerformanceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="520" Height="860"
             Opacity="0">
    <UserControl.Resources>
        <Style x:Key="OptimisationButton" TargetType="Button" BasedOn="{StaticResource DarkCardButtonStyle}">
            <Setter Property="Height" Value="74"/>
            <Setter Property="FontSize" Value="17"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="{StaticResource AppBackgroundBrush}">
        <TextBlock Text="Performance Menu" Style="{StaticResource BaseTextBlock}" FontSize="47" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,26,0,0" VerticalAlignment="Top"/>

        <Border Width="420" Height="760" Style="{StaticResource CardBorderStyle}" Margin="0,98,0,0" VerticalAlignment="Top">
            <Grid Margin="30,28,30,24">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="18"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="26"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions><ColumnDefinition Width="Auto"/><ColumnDefinition Width="16"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                    <Grid Width="88" Height="88">
                        <Path Fill="#FF1D1D" Data="M8,15 L8,82 L24,68 L24,49 L53,49 L23,80 L48,80 L83,45 L83,15 Z" Stretch="Fill"/>
                    </Grid>
                    <Border Grid.Column="2" Height="66" VerticalAlignment="Center" BorderBrush="#313844" BorderThickness="1.2" CornerRadius="14" Background="#0A0E14">
                        <Grid Margin="14,0">
                            <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="50"/></Grid.ColumnDefinitions>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Abel RG" Style="{StaticResource BaseTextBlock}" FontWeight="Bold" FontSize="20"/>
                                <TextBlock Text="Premium" Foreground="#FF1A1A" FontSize="20" FontWeight="SemiBold"/>
                            </StackPanel>
                            <Grid Grid.Column="1" Width="44" Height="44" VerticalAlignment="Center">
                                <Ellipse Stroke="#DFDFDF" StrokeThickness="4"/>
                                <Ellipse Width="14" Height="14" Fill="#DFDFDF" VerticalAlignment="Top" Margin="0,8,0,0"/>
                                <Path Fill="#DFDFDF" Data="M22,24 C14,24 10,31 10,37 L34,37 C34,31 30,24 22,24 Z"/>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>

                <Button Grid.Row="2" Style="{StaticResource OptimisationButton}">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="GPU Optimization" Style="{StaticResource BaseTextBlock}" FontSize="37" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="Unleash your PC's Speed" Foreground="#CFCFCF" FontSize="31" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Grid.Row="4" x:Name="CpuSelectedButton" Style="{StaticResource OptimisationButton}" BorderBrush="#FF0000" BorderThickness="1.5">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="CPU Optimization" Style="{StaticResource BaseTextBlock}" FontSize="37" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="Unleash your PC's Speed" Foreground="#CFCFCF" FontSize="31" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Grid.Row="6" Style="{StaticResource OptimisationButton}" BorderBrush="#FF0000" BorderThickness="1.5">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="Ram Optimization" Style="{StaticResource BaseTextBlock}" FontSize="37" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="Unleash your PC's Speed" Foreground="#CFCFCF" FontSize="31" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Grid.Row="8" Style="{StaticResource OptimisationButton}">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="Storage Optimization" Style="{StaticResource BaseTextBlock}" FontSize="37" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="Unleash your PC's Speed" Foreground="#CFCFCF" FontSize="31" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Grid.Row="10" Style="{StaticResource OptimisationButton}">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="General Optimization" Style="{StaticResource BaseTextBlock}" FontSize="37" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="Unleash your PC's Speed" Foreground="#CFCFCF" FontSize="31" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Grid.Row="12" Style="{StaticResource OptimisationButton}">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="System Optimization" Style="{StaticResource BaseTextBlock}" FontSize="37" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="Unleash your PC's Speed" Foreground="#CFCFCF" FontSize="31" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <StackPanel Grid.Row="14" Orientation="Horizontal" HorizontalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Margin="0,0,24,0"><Ellipse Width="10" Height="10" Fill="#060A10" VerticalAlignment="Center"/><TextBlock Text=" USB" Style="{StaticResource BaseTextBlock}" FontSize="26"/></StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,24,0"><Ellipse Width="10" Height="10" Fill="#060A10" VerticalAlignment="Center"/><TextBlock Text=" POWER" Style="{StaticResource BaseTextBlock}" FontSize="26"/></StackPanel>
                    <StackPanel Orientation="Horizontal"><Ellipse Width="10" Height="10" Fill="#060A10" VerticalAlignment="Center"/><TextBlock Text=" WINDOWS" Style="{StaticResource BaseTextBlock}" FontSize="26"/></StackPanel>
                </StackPanel>

                <Grid Grid.Row="16">
                    <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="58"/></Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Style="{StaticResource PrimaryButtonStyle}" Height="64" FontSize="36" Content="Apply"/>
                    <TextBlock Grid.Column="1" Text="âŸ³" Foreground="#E9E9E9" FontSize="44" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                </Grid>

                <Button Grid.Row="18" Height="54" Background="#0A0E14" Foreground="#F2F2F2" BorderThickness="0" FontSize="35" FontWeight="SemiBold" Cursor="Hand" Style="{StaticResource DarkCardButtonStyle}" Content="Reset"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
